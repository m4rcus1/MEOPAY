<div class="container flex w-[100%] min-h-[400px] my-[30px] mx-auto ">
    {{!-- Tabs Container --}}

    <div class="w-[20%] text-black uppercase text-center">
        <div class="tab py-[24px] px-[32px] cursor-pointer font-bold bg-myColor text-white text-[10px]">Danh sách giao dịch</div>
        <div class="tab py-[24px] px-[32px] cursor-pointer font-bold text-[10px]">Danh sách giao dịch đã thành công</div>
                <div class="tab py-[24px] px-[32px] cursor-pointer font-bold text-[10px]">Danh sách giao dịch đang chờ</div>

    </div>
    {{!-- Content container --}}
    <div class="flex flex-col w-[80%]">
        <span class="flex justify-end"><a href="/logout"><i class="fa-solid fa-2x fa-right-from-bracket"></i></a></span>
                <span class="flex justify-end"><a href="/admin"><i class="fa-solid fa-2x fa-solid fa-users"></i></a></span>

        <div class="content fade show active w-[100%]"> {{> listOftranfer}} </div>
        <div class="content fade w-[100%]"> {{> listOftranferSuc}} </div>
<div class="content fade w-[100%]"> {{> listOftranferWait}} </div>
    </div>
    
</div>

<script>
    const tabs = document.querySelectorAll(".container .tab");

    const contents = document.querySelectorAll(".container .content")

    function removeActiveClass(){
        tabs.forEach((t)=>{
            t.classList.remove("bg-myColor","text-white")
        })

        contents.forEach(c=>{
            c.classList.remove("active", "show")
        })
    }
 
    tabs.forEach((t,i)=>{
        t.addEventListener("click",()=>{
            removeActiveClass();
            contents[i].classList.add("active", "show");
            t.classList.add("bg-myColor","text-white");
        })
    })
</script>

<div class="container flex items-center justify-center min-h-[35rem] bg-[#2595be9b]">
  <div class="register-card">
    <div class="register-card-header">
      <h1 class="text-4xl font-semibold">Quên mật khẩu</h1>
      <div>Vui lòng nhập email để nhận mật khẩu mới</div>
    </div>
    <form class="register-card-form"  method="POST" action="/forgotPassword1">
      
     
      {{!-- {{{alert}}} --}}
      <table style="width: 100%;">
        <tr class="hidden">
           <td>Email:</td>
          <td><input type="email" name="email" id="email" placeholder="Nhập email" value="{{email}}" readonly required/></td>
        </tr>
        <tr class="hidden">
          <td>Phone:</td>
          <td><input type="text" name="phone" id="phone" placeholder="Nhập số điện thoại" value="{{phone}}" readonly/></td>
        </tr>
        <tr>
            
          <td>OTP:</td>
          <td><input type="number" name="otp" id="otp" placeholder="Nhập otp" required /></td>
          {{!-- <input type="hidden" id="otp" name="otp" value="makeid(3)" /> --}}
        </tr>
      </table>
      <div>Time left = <span id="timer"></span></div>
      <button type="submit">Gửi</button>
      
    </form>
    {{error}}
  </div>
</div>

<script>
  let timerOn = true;

  function timer(remaining) {
    var m = Math.floor(remaining / 60);
    var s = remaining % 60;
    
    m = m < 10 ? '0' + m : m;
    s = s < 10 ? '0' + s : s;
    document.getElementById('timer').innerHTML = m + ':' + s;
    remaining -= 1;
    
    if(remaining >= 0 && timerOn) {
      setTimeout(function() {
          timer(remaining);
      }, 1000);
      return;
    }

    if(!timerOn) {
      // Do validate stuff here
      return;
    }
   
  }

  timer({{time1}});
</script>